{
    "preset": "laravel",
    "rules": {
        "array_indentation": true,
        "fully_qualified_strict_types": true,
        "concat_space": {
            "spacing": "one"
        },
        "class_attributes_separation": {
            "elements": {
                "const": "one",
                "method": "one",
                "property": "only_if_meta",
                "trait_import": "none",
                "case": "none"
            }
        }
    }
}
